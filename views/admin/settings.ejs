<div id="admin-content" class="flex-1 p-8 overflow-y-auto">
  <header class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-2">
      <i class="fa fa-cog text-gray-600"></i> Settings
    </h1>
  </header>

  <div class="bg-white rounded-xl shadow-lg p-8 max-w-2xl mx-auto">
    <div class="flex items-center mb-6">
      <i class="fa fa-cog text-gray-500 mr-3"></i>
      <h2 class="text-2xl font-semibold text-gray-800">Settings</h2>
    </div>

    <form action="/admin/save-settings" method="POST" enctype="multipart/form-data" class="space-y-6">
      <!-- Website Title -->
      <div>
        <label for="article_title" class="block text-sm font-medium text-gray-700 mb-2">Website Title</label>
        <input type="text" name="website_title" id="article_title"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out"
          autocomplete="off" value="<%= settings.website_title %>" required>
      </div>

      <!-- Upload Logo -->
      <div>
        <label for="website_logo" class="block text-sm font-medium text-gray-700 mb-2">Upload Logo</label>
        <% if(settings.website_logo && settings.website_logo.trim()!="") { %>
          <div class="mb-4">
            <img src="<%= settings.website_logo %>" id="logoPreview" alt="Logo Preview"
              class="h-32 w-auto object-contain border border-gray-300 rounded-lg shadow-sm">
          </div>
        <% } %>
        <input type="file" name="website_logo" id="logoInput"
          class="block w-full text-sm text-gray-700 border border-gray-300 rounded-lg cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
      </div>

      <!-- Footer Description -->
      <div>
        <label for="footer_description" class="block text-sm font-medium text-gray-700 mb-2">Footer Description</label>
        <input type="text" name="footer_description" id="footer_description"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 transition duration-150 ease-in-out"
          autocomplete="off" value="<%= settings.footer_description %>" required>
      </div>

      <!-- Save Button -->
      <div class="flex justify-end">
        <input type="submit" name="submit" value="Save"
          class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out cursor-pointer">
      </div>
    </form>
  </div>
</div>

<script>
  const input = document.getElementById('logoInput');
  const preview = document.getElementById('logoPreview');

  if (input) {
    input.addEventListener("change", () => {
      const file = input.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function () {
          if (preview) preview.src = reader.result;
        }
        reader.readAsDataURL(file);
      }
    });
  }
</script>
