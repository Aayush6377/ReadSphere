<div id="admin-content" class="p-6">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800 flex items-center">
      <i class="fa fa-cubes text-indigo-600 mr-2"></i>
      Dashboard 
      <small class="ml-2 text-lg text-gray-500">| <%= fullname %></small>
    </h1>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    
    <!-- Articles Card -->
    <div class="bg-blue-100 rounded-xl shadow-md p-6 flex flex-col items-center justify-center hover:shadow-lg transition">
      <i class="fa fa-file-text text-blue-600 text-4xl mb-3"></i>
      <h4 class="text-lg font-medium text-gray-700">Articles</h4>
      <h1 class="text-3xl font-bold text-gray-900"><%= articleCount %></h1>
    </div>

    <!-- Categories Card -->
    <div class="bg-yellow-100 rounded-xl shadow-md p-6 flex flex-col items-center justify-center hover:shadow-lg transition">
      <i class="fa fa-gears text-yellow-600 text-4xl mb-3"></i>
      <h4 class="text-lg font-medium text-gray-700">Categories</h4>
      <h1 class="text-3xl font-bold text-gray-900"><%= categoryCount %></h1>
    </div>

    <% if(role == "admin") { %>
    <!-- Users Card -->
    <div class="bg-green-100 rounded-xl shadow-md p-6 flex flex-col items-center justify-center hover:shadow-lg transition">
      <i class="fa fa-users text-green-600 text-4xl mb-3"></i>
      <h4 class="text-lg font-medium text-gray-700">Users</h4>
      <h1 class="text-3xl font-bold text-gray-900"><%= userCount %></h1>
    </div>
    <% } %>
    
  </div>
</div>
