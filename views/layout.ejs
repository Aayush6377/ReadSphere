<% if (typeof categories === "undefined") categories = [] %>
<% if (typeof settings === "undefined") settings = {
  footer_description: `Â© Copyright 2025 ReadSphere | Powered by ReadSphere`,
  website_title: "ReadSphere"
} %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= settings.website_title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="/images/news.jpg" type="image/jpg">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50">

  <!-- NAVBAR -->
<nav class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      
      <!-- Logo with image -->
      <div class="flex-shrink-0 flex items-center gap-2">
        <a href="/" class="flex items-center">
          <img src="/images/news.jpg" alt="<%= settings.website_title %> Logo" class="h-10 w-auto">
          <span class="ml-2 text-2xl font-bold text-gray-800"><%= settings.website_title %></span>
        </a>
      </div>

      <!-- Desktop Menu Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a href="/" class="text-gray-600 hover:bg-indigo-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Home</a>
          <% categories.forEach(category => { %>
            <a href="/category/<%= category.slug %>" class="text-gray-600 hover:bg-indigo-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium"><%= category.name %></a>
          <% }) %>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="-mr-2 flex md:hidden">
        <button id="mobile-menu-button" type="button" class="bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 
          hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 
          focus:ring-offset-gray-800 focus:ring-white">
          <span class="sr-only">Open main menu</span>
          <span class="material-icons">menu</span>
        </button>
      </div>

    </div>
  </div>

  <!-- Mobile Menu Links -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
    <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-600 hover:bg-indigo-600 hover:text-white">Home</a>
    <% categories.forEach(category => { %>
      <a href="/category/<%= category.slug %>" class="block px-3 py-2 rounded-md text-base font-medium text-gray-600 hover:bg-indigo-600 hover:text-white"><%= category.name %></a>
    <% }) %>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  btn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });
</script>


  <!-- MAIN CONTENT -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Left Column (Articles injected dynamically) -->
      <main class="lg:col-span-2 space-y-10">
        <%- body %>
      </main>

      <!-- Right Column (Sidebar include) -->
      <aside class="space-y-10">
        <%- include('partials/sidebar.ejs') %>
      </aside>
    </div>
  </div>
  <!-- /MAIN CONTENT -->

  <!-- FOOTER -->
  <footer class="bg-gray-800 mt-12">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 text-center text-gray-400">
      <%- settings.footer_description %>
    </div>
  </footer>
  <!-- /FOOTER -->

</body>
</html>
